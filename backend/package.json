{
    "name": "organizer-shopping-list-backend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start:dev": "ts-node-dev server.ts",
        "start": "ts-node server.ts",
        "remove_husky": "rimraf .husky",
        "postinstall": "npm run remove_husky && cd ../ && husky install backend/.husky && husky add backend/.husky/pre-commit 'cd backend && npm run pre-commit' && husky add backend/.husky/pre-push 'cd backend && npm run pre-push' && cd backend && npm run generateGraphQLTypes",
        "pre-commit": "lint-staged",
        "pre-push": "npm run eslint_check",
        "eslint_check": "eslint 'src/**/*.{js,*.js,ts,*.ts}'",
        "eslint_fix": "eslint 'src/**/*.{js,*.js,ts,*.ts}' --fix",
        "prettier_check": "prettier --check 'src/**/*.{js,*.js,ts,*.ts,,json}'",
        "prettier_fix": "prettier --write 'src/**/*.{js,*.js,ts,*.ts,json}'",
        "check_all": "npm run prettier_check && npm run eslint_check",
        "fix_all": "npm run prettier_fix && eslint_fix",
        "generateGraphQLTypes": "graphql-codegen --require dotenv/config --config codegen.yml && npm run formatGeneratedCode",
        "formatGeneratedCode": "prettier --write 'src/**/*.generated.ts'",
        "generateGraphQLTypes:watch": "graphql-codegen --require dotenv/config --config codegen.yml --watch && npm run formatGeneratedCode"
    },
    "lint-staged": {
        "src/**/*.{js,*.js,ts,*.ts,json}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "dependencies": {
        "apollo-server-express": "^3.5.0",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "graphql": "^15.7.2",
        "graphql-import-node": "^0.0.4",
        "graphql-playground-middleware-express": "^1.7.23",
        "mysql": "^2.18.1",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^2.3.0",
        "@graphql-codegen/typescript": "^2.4.1",
        "@graphql-codegen/typescript-operations": "^2.2.1",
        "@graphql-codegen/typescript-resolvers": "^2.4.2",
        "@trivago/prettier-plugin-sort-imports": "^3.1.1",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/express-graphql": "^0.9.0",
        "@types/graphql": "^14.5.0",
        "@types/mysql": "^2.15.19",
        "@types/node": "^16.11.6",
        "@typescript-eslint/eslint-plugin": "^5.6.0",
        "@typescript-eslint/parser": "^5.6.0",
        "eslint": "^8.4.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.1.2",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "ts-node-dev": "^1.1.8"
    }
}
