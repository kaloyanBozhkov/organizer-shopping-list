{
    "name": "organizer-shopping-list-backend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start:dev": "NODE_PATH=./src ts-node-dev --no-notify --respawn --transpile-only ./src/server.ts",
        "start": "ts-node ./src/server.ts",
        "remove_husky": "rimraf .husky",
        "postinstall": "npm run remove_husky && cd ../ && husky install backend/.husky && husky add backend/.husky/pre-commit 'cd backend && npm run pre-commit' && husky add backend/.husky/pre-push 'cd backend && npm run pre-push' && cd backend && npm run prismaGenerate",
        "prismaGenerate": "prisma generate",
        "pre-commit": "lint-staged",
        "pre-push": "npm run eslint_check",
        "eslint_check": "eslint 'src/**/*.{js,*.js,ts,*.ts}'",
        "eslint_fix": "eslint 'src/**/*.{js,*.js,ts,*.ts}' --fix",
        "prettier_check": "prettier --check 'src/**/*.{js,*.js,ts,*.ts,,json}'",
        "prettier_fix": "prettier --write 'src/**/*.{js,*.js,ts,*.ts,json}'",
        "check_all": "npm run prettier_check && npm run eslint_check",
        "fix_all": "npm run prettier_fix && eslint_fix"
    },
    "lint-staged": {
        "src/**/*.{js,*.js,ts,*.ts,json}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "prisma": {
        "schema": "src/db/schema.prisma"
    },
    "dependencies": {
        "@prisma/client": "^3.8.1",
        "@types/graphql-fields": "^1.3.4",
        "@types/nodemailer": "^6.4.4",
        "apollo-server-express": "^3.5.0",
        "body-parser": "^1.19.1",
        "class-validator": "^0.13.2",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "graphql": "^15.7.2",
        "graphql-fields": "^2.0.3",
        "graphql-scalars": "^1.14.1",
        "jsonwebtoken": "^8.5.1",
        "nodemailer": "^6.7.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "reflect-metadata": "^0.1.13",
        "ts-node": "^10.4.0",
        "tslib": "^2.3.1",
        "type-graphql": "^1.1.1",
        "typescript": "^4.4.4"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^3.1.1",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/express-graphql": "^0.9.0",
        "@types/graphql": "^14.5.0",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/mysql": "^2.15.19",
        "@types/node": "^16.11.6",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "@typescript-eslint/eslint-plugin": "^5.6.0",
        "@typescript-eslint/parser": "^5.6.0",
        "eslint": "^8.4.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.1.2",
        "prettier": "^2.5.1",
        "prisma": "^3.8.1",
        "rimraf": "^3.0.2",
        "ts-node-dev": "^1.1.8",
        "typegraphql-prisma": "^0.18.4"
    }
}
