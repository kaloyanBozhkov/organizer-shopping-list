        "@types/node": "^12.0.0",
        "react": "^18.0.0-alpha-ee069065d-20211105",
        "react-dom": "^18.0.0-alpha-ee069065d-20211105",
        "react-scripts": "4.0.3",
        "typescript": "^4.1.2",
        "web-vitals": "^1.0.1"
    },
    "devDependencies": {
        "@types/react": "^17.0.34",
        "@types/react-dom": "^17.0.11",
        "css-loader": "^5.1.2",
        "customize-cra": "^1.0.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^7.2.0",
        "eslint-config-react-app": "^6.0.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^7.0.4",
        "lint-staged": "^11.1.2",
        "prettier": "^2.2.1",
        "react-app-rewired": "^2.1.8",
        "sass": "^1.32.8",
        "sass-loader": "^10.1.1",
        "style-loader": "^2.0.0",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-recommended-scss": "^4.3.0",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-prettier": "^1.2.0",
        "stylelint-scss": "^3.21.0",
        "svg-url-loader": "^7.1.1",
        "ts-loader": "^8.0.18",
        "url-loader": "^4.1.1"
    },
    "scripts": {
        "remove_husky": "rimraf .husky",
        "postinstall": "npm run remove_husky && husky install .husky && husky add .husky/pre-commit 'npm run pre-commit' && husky add .husky/pre-push 'npm run pre-push'",
        "pre-commit": "lint-staged",
        "pre-push": "npm run check_all",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "eslint_check": "eslint 'src/**/*.{js,*.js,ts,*.ts,tsx,*.tsx}'",
        "stylelint_check": "stylelint 'src/**/*.{scss,*.scss,css,*.css}'",
        "prettier_check": "prettier --check 'src/**/*.{js,*.js,ts,*.ts,tsx,*.tsx,scss,*.scss,css,*.css,json}'",
        "check_all": "npm run prettier_check && npm run eslint_check && npm run stylelint_check",
        "eslint_fix": "eslint 'src/**/*.{js,*.js,ts,*.ts,tsx,*.tsx}' --fix",
        "stylelint_fix": "stylelint 'src/**/*.{scss,*.scss,css,*.css}' --fix",
        "prettier_fix": "stylelint 'src/**/*.{js,*.js,ts,*.ts,tsx,*.tsx,scss,*.scss,css,*.css,json}' --fix",
        "fix_all": "npm run prettier_fix && npm run eslint_fix && npm run stylelint_fix"
    },
    "lint-staged": {
        "src/**/*.{js,*.js,ts,*.ts,tsx,*.tsx,json}": [
            "prettier --write",
            "eslint --fix"
        ],
        "src/**/*.{scss,*.scss,css,*.css}": [
            "stylelint --fix"
        ]
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
